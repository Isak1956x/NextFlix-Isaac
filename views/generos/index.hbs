<div class="container">
<div class="row">
    <h1 class="text-center text-ligth">Genre List</h1>
</div>
<div class="row mt-2">
    <div class="col-12 col-sm-4">
        <a href="/generos/create" class="btn btn-danger"><i class="bi bi-plus-circle"></i> Create New Genre</a>
    </div>
</div>

        {{#if hasGenres}}
              <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 mt-3 g-4">
        {{#each genresList}}
       <div class="col">
  <div class="card bg-dark border-secondary border-5 shadow-lg text-center h-100">
    <div class="card-body d-flex flex-column justify-content-between text-light">
      <h2 class="card-title mb-3">{{this.genreTitle}}</h2>
      <div class="d-flex justify-content-center gap-2 mt-auto">
        <a href="/generos/edit/{{this.id}}" class="btn btn-sm btn-warning">
          <i class="bi bi-pencil"></i> Edit
        </a>
        <form action="/generos/delete" method="post" class="d-inline">
          <input type="hidden" value="{{this.id}}" name="genreId">
          <button class="btn btn-sm btn-danger delete-genre" type="submit">
            <i class="bi bi-trash"></i> Delete
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

     {{/each}}
        {{else}}
 
        <div class="row d-flex justify-content-center mt-3">
            <div class="col-12 col-sm-4">
                <div class="alert alert-info" role="alert">
               <i class="bi bi-info-circle"></i>   There are not genres registered
                </div>
            </div>
        </div>

     {{/if}} 
</div>

{{#section "scripts"}}
<script src="/assets/js/site/series/index.js"></script>
<script src="/assets/js/lib/bootstrap/bootstrap.min.js"></script>
{{/section}}